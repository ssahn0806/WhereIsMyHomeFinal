<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.house.model.dao.BaseaddressDAO">
	<select id="selectBaseaddress" parameterType="map" resultType="BaseAddress">
		select no,sidoName,gugunName,dongName,dongCode,lat,lng from baseaddress 
		where sidoName=#{sidoName},gugunName=#{gugunName},dongName=#{dongName}
	</select>
	
	<select id="selectFullName" parameterType="string" resultType="BaseAddress">
		select sidoName,gugunName,dongName from baseaddress where dongCode=#{dongCode}
	</select>
	
	<select id="selectLatLng" parameterType="string" resultMap="LatLngMap">
		select lat,lng from baseaddress where dongCode=#{dongCode}
	</select>
	
	<resultMap type="map" id="LatLngMap">
		<result column="lat" property="lat"/>
		<result column="lng" property="lng"/>
	</resultMap>
</mapper>














